<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kandidati</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/adminCandidates.css">
    <link rel="stylesheet" href="/stylesheets/partials.css">
</head>
<body class="candidates-body">

<%- include('../partials/navbar.ejs') %>

<div class="container mt-5">
    <h1 class="text-center mb-4 candidates-header">Kandidati</h1>

    <!-- Tabela poslova -->
    <div class="table-responsive">
    <table class="table table-striped candidates-table">
        <thead>
        <tr>
            <th>Naziv posla</th>
            <th>Kompanija</th>
            <th>Lokacija</th>
            <th>Rok prijave</th>
            <th colspan="2">Akcije</th>
        </tr>
        </thead>
        <tbody>
        <% if (jobs.length > 0) { %>
            <% jobs.forEach(job => { %>
                <tr>
                    <td><%= job.title %></td>
                    <td><%= job.company %></td>
                    <td><%= job.location %></td>
                    <td><%= job.deadline %></td>
                    <td>
                        <a href="/admin/candidates/jobs/<%= job.id %>/applications" class="btn btn-sm candidates-btn-primary">Pogledaj prijave</a>
                    </td>
                    <td>
                        <a href="/admin/candidates/jobs/<%= job.id %>/applications/ranking" class="btn btn-sm candidates-btn-info">Rangiranje kandidata</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="5" class="text-center candidates-empty-msg">Nema dostupnih poslova.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

</body>
</html>


