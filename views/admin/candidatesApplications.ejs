<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prijave za posao</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <link rel="stylesheet" href="/stylesheets/adminCandidatesAppl.css">
</head>
<body class="admin-applications-body">

<%- include('../partials/navbar.ejs') %>

<div class="container mt-5 flex-grow-1">
    <h1 class="text-center mb-4 admin-applications-title">Prijave za posao</h1>

    <!-- Filter Forma -->
    <form method="GET" action="/admin/candidates/jobs/<%= jobId %>/applications">
        <div class="row">
            <div class="col-md-4">
                <label for="status" class="form-label">Status prijave</label>
                <select name="status" id="status" class="form-select">
                    <option value="all" <%= status === 'all' ? 'selected' : '' %>>Sve</option>
                    <option value="applied" <%= status === 'applied' ? 'selected' : '' %>>Prijavljen</option>
                    <option value="shortlisted" <%= status === 'shortlisted' ? 'selected' : '' %>>UÅ¾i izbor</option>
                    <option value="rejected" <%= status === 'rejected' ? 'selected' : '' %>>Odbijen</option>
                    <option value="interview_scheduled" <%= status === 'interview_scheduled' ? 'selected' : '' %>>Intervju zakazan</option>
                </select>

            </div>

            <div class="col-md-4">
                <label for="appliedDate" class="form-label">Datum prijave</label>
                <input type="date" name="appliedDate" id="appliedDate" class="form-control" value="<%= appliedDate %>">
            </div>

            <div class="col-md-4">
                <button type="submit" class="btn btn-primary mt-4 filt-btn">Filtriraj</button>
            </div>
        </div>
    </form>

    <!-- Poruka ako nema prijava -->
    <% if (message) { %>
        <div class="alert alert-info mt-4 text-center">
            <%= message %>
        </div>
    <% } %>

    <div class="table-responsive mt-4">
        <table class="table admin-applications-table">
            <thead>
            <tr>
                <th>#</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Status prijave</th>
                <th>Datum prijave</th>
                <th>Akcija</th>
            </tr>
            </thead>
            <tbody>
            <% if (applications && applications.length > 0) { %>
                <% applications.forEach((application, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= application.first_name %></td>
                        <td><%= application.last_name %></td>
                        <td><%= application.email %></td>
                        <td><%= application.application_status %></td>
                        <td><%= application.applied_at %></td>
                        <td>
                            <a href="/admin/candidates/jobs/<%= jobId %>/applications/<%= application.application_id %>"
                               class="btn admin-applications-btn btn-sm">
                                Pogledaj detalje
                            </a>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

</body>
</html>





