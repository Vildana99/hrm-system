<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Početna stranica</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <link rel="stylesheet" href="/stylesheets/userDashboard.css">
</head>
<body>

<%- include('../partials/navbar.ejs') %>

<!-- Glavni sadržaj -->
<div class="container mt-5">
    <!-- Filter sekcija -->
    <div class="mb-4">
        <h2>Pronađi poslove</h2>

        <!-- Sekcija za obavijesti -->
        <div id="notification-container" class="mb-4"></div>

        <form id="filter-form" class="row g-3">
            <div class="col-md-4">
                <input type="text" id="company" class="form-control" placeholder="Pretraga po kompaniji">
            </div>
            <div class="col-md-4">
                <input type="text" id="title" class="form-control" placeholder="Pretraga po poziciji">
            </div>
            <div class="col-md-4">
                <input type="date" id="deadline" class="form-control" placeholder="Pretraga po roku">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-success">Filtriraj</button>
            </div>
        </form>
    </div>

    <!-- Sekcija za prikaz poslova -->
    <div id="jobs-container" class="row g-3">
        <!-- Poslovi ce biti dinamicki prikazani ovdje -->
    </div>
</div>

<%- include('../partials/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const fetchJobs = async (filters = {}) => {
        try {
            const params = new URLSearchParams(filters).toString();
            const response = await fetch(`/user/jobs?${params}`);
            const jobs = await response.json();

            const container = document.getElementById('jobs-container');
            container.innerHTML = ''; // Ciscenje preth. rezultata

            if (jobs.length === 0) {
                container.innerHTML = '<p class="text-muted">Nema dostupnih poslova.</p>';
                return;
            }

            jobs.forEach(job => {
                const jobCard = `
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">${job.title}</h5>
                                <p class="card-text">${job.description}</p>
                                <p class="card-text"><strong>Kompanija:</strong> ${job.company}</p>
                                <p class="card-text"><strong>Lokacija:</strong> ${job.location}</p>
                                <p class="card-text"><strong>Rok za prijavu:</strong> ${new Date(job.deadline).toLocaleDateString()}</p>
                                <button class="btn btn-success" onclick="applyForJob(${job.id})">Prijavi se</button>
                            </div>
                        </div>
                    </div>
                `;
                container.innerHTML += jobCard;
            });
        } catch (error) {
            console.error('Greška prilikom dohvaćanja poslova:', error);
        }
    };

    const applyForJob = async (jobId) => {
        try {
            const response = await fetch('/user/jobs/apply', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ jobId }),
            });
            const result = await response.json();

            const notificationContainer = document.getElementById('notification-container');
            if (response.ok) {
                notificationContainer.innerHTML = `
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Uspješno ste se prijavili na posao.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            } else {
                notificationContainer.innerHTML = `
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    ${result.message || 'Došlo je do greške.'}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            }
        } catch (error) {
            console.error('Greška prilikom prijave:', error);
        }
    };

    document.getElementById('filter-form').addEventListener('submit', (e) => {
        e.preventDefault();
        const filters = {};

        const company = document.getElementById('company').value;
        const title = document.getElementById('title').value;
        const deadline = document.getElementById('deadline').value;

        if (company) filters.company = company;
        if (title) filters.title = title;
        if (deadline) filters.deadline = deadline;

        fetchJobs(filters);
    });

    fetchJobs();
</script>
</body>
</html>











