<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Korisnički Profil</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <link rel="stylesheet" href="/stylesheets/userProfile.css">
</head>
<body>
<%- include('../partials/navbar.ejs') %>
<div class="container mt-5">
    <h1 class="text-center mb-4">Moj profil</h1>

    <!-- Lični podaci -->
    <div class="card mb-4 position-relative">
        <div class="card-header">
            <h5>Lični podaci</h5>
        </div>
        <div class="card-body">
            <% if (personalData) { %>
                <p><strong>Telefon:</strong> <%= personalData.phone_number %></p>
                <p><strong>Adresa:</strong> <%= personalData.address %></p>
                <p><strong>Datum rođenja:</strong> <%= personalData.date_of_birth %></p>
                <p><strong>O meni:</strong> <%= personalData.about_me %></p>
                <a href="/user/profile/personal_data/<%= personalData.id %>" class="edit-icon" title="Uredi lične podatke">
                    <i class="bi bi-pencil-square"></i>
                </a>
            <% } else { %>
                <p>Nema unesenih ličnih podataka.</p>
                <a href="/user/profile/new_personal_data" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Dodaj lične podatke
                </a>
            <% } %>
        </div>
    </div>



    <!-- Radno iskustvo -->
    <div class="card mb-4 position-relative">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Radno iskustvo</h5>
            <a href="/user/profile/new_experience" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Dodaj novo
            </a>
        </div>
        <div class="card-body">
            <% if (workExperience.length > 0) { %>
                <% workExperience.forEach(experience => { %>
                    <div class="mb-3 position-relative border rounded p-3">
                        <p><strong>Kompanija:</strong> <%= experience.company_name %></p>
                        <p><strong>Pozicija:</strong> <%= experience.position %></p>
                        <p><strong>Period:</strong> <%= experience.start_date %> - <%= experience.end_date || 'Trenutno' %></p>
                        <p><strong>Opis:</strong> <%= experience.description %></p>
                        <a href="/user/profile/work_experience/<%= experience.id %>" class="edit-icon" title="Uredi radno iskustvo">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Nema unesenih radnih iskustava.</p>
            <% } %>
        </div>
    </div>

    <!-- Obrazovanje -->
    <div class="card position-relative">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Obrazovanje</h5>
            <a href="/user/profile/new_education" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Dodaj novo
            </a>
        </div>
        <div class="card-body">
            <% if (education.length > 0) { %>
                <% education.forEach(edu => { %>
                    <div class="mb-3 position-relative border rounded p-3">
                        <p><strong>Institucija:</strong> <%= edu.institution_name %></p>
                        <p><strong>Stepen:</strong> <%= edu.degree %></p>
                        <p><strong>Smjer:</strong> <%= edu.field_of_study %></p>
                        <p><strong>Period:</strong> <%= edu.start_date %> - <%= edu.end_date || 'Trenutno' %></p>
                        <a href="/user/profile/education/<%= edu.id %>" class="edit-icon" title="Uredi obrazovanje">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Nema unesenih podataka za obrazovanje.</p>
            <% } %>
        </div>
    </div>



</div>

<%- include('../partials/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





