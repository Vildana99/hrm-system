<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moje Prijave</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <link rel="stylesheet" href="/stylesheets/userApplications.css">
</head>
<body>

<%- include('../partials/navbar.ejs') %>
<div class="container mt-5">
    <!-- Notifikacije -->
    <div id="notification-container"></div>

    <h1 class="mb-4">Moje prijave</h1>
    <% if (applications.length > 0) { %>
        <% applications.forEach(application => { %>
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Status prijave:</strong> <span><%= application.status_name %></span>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= application.job_title %> - <%= application.company %></h5>
                    <p class="card-text"><strong>Datum prijave:</strong> <%= new Date(application.applied_at).toLocaleDateString() %></p>
                    <% if (application.interview_date) { %>
                        <p class="card-text"><strong>Datum intervjua:</strong> <%= new Date(application.interview_date).toLocaleDateString() %></p>
                        <p class="card-text"><strong>Lokacija:</strong> <%= application.location %></p>
                        <p class="card-text"><strong>Potvrđen intervju:</strong> <%= application.confirmed ? 'Da' : 'Ne' %></p>

                        <% if (!application.confirmed) { %>

                            <button
                                    class="btn btn-primary confirm-interview"
                                    data-application-id="<%= application.application_id %>">
                                Potvrdi intervju
                            </button>
                        <% } %>
                    <% } %>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>Nema dostupnih prijava.</p>
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.querySelectorAll('.confirm-interview').forEach(button => {
        button.addEventListener('click', async () => {
            const applicationId = button.getAttribute('data-application-id');
            const notificationContainer = document.getElementById('notification-container');

            try {
                const response = await fetch(`/user/applications/${applicationId}/confirm`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    notificationContainer.innerHTML = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Intervju uspješno potvrđen.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    `;
                    location.reload(); // Osvježavanje stranice
                } else {
                    notificationContainer.innerHTML = `
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        ${result.message || 'Došlo je do greške.'}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    `;
                }
            } catch (error) {
                console.error('Greška:', error);
                notificationContainer.innerHTML = `
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    Došlo je do greške prilikom potvrde intervjua.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                `;
            }
        });
    });
</script>
</body>
</html>



